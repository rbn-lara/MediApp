<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
	
	<style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
		<item name="windowNoTitle">true</item>
		<!--We will be using the toolbar so no need to show ActionBar-->
		<item name="windowActionBar">false</item>
		<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">#FFADD8E6</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#FFADD8E6</item>
		<!-- colorAccent is used as the default value for colorControlActivated
     which is used to tint widgets -->
		<item name="colorAccent">#193952</item>
		<!-- You can also set colorControlNormal, colorControlActivated
     colorControlHighlight and colorSwitchThumbNormal. -->
		<item name="windowActionModeOverlay">true</item>
		<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
		<item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
	</style>
	
	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">#FFADD8E6</item>
	</style>
	<style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
		<item name="android:headerBackground">#FFADD8E6</item>
	</style>
	<style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
		<item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
	</style>

	<!-- Time -->
	<style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">#ff000000</item>
		<item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
		</style>
	<style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
		<item name="colorAccent">#ff000000</item>
		<item name="android:timePickerMode">clock</item>
		<item name="android:headerBackground">#FFADD8E6</item>
		<!-- TimePicker Time *TextAppearance* -->
		<item name="android:numbersTextColor">#ff000000</item>
		<item name="android:numbersSelectorColor">#FFADD8E6</item>
		</style>

	</resources>